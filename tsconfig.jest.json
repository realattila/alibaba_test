{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"],
      "components/*": ["./src/components/*"],
      "store/*": ["./src/store/*"],
      "services/*": ["./src/services/*"],
      "api/*": ["./src/api/*"],
      "hooks/*": ["./src/hooks/*"],
      "utility/*": ["./src/utility/*"],
